@model WebApplication3.Models.HomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Hello World!</h2>
    <ul>
        @foreach (var name in Model.Names)
        {
            <li>Name: @name</li>
        }
    </ul>

    <h2>Contact Form</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(false)
        
        <div>Name: @Html.TextBoxFor(model => model.Contact.Name)</div>
        <div>E-mail: @Html.TextBoxFor(model => model.Contact.Email)</div>
        <div>Subject: @Html.TextBoxFor(model => model.Contact.Subject, new { @class = "foo", style = "width: 200px;" })</div>
        <div>
            <div>
                Message
            </div>
            <div>
                @Html.TextAreaFor(model => model.Contact.Message)
            </div>
        </div>
        
        <div>
            <input type="submit" value="Send" />
        </div>
    }
    
    <script src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>